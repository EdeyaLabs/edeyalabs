.hero.hero-small
  .container
    %h1.hero-headline=t 'about.main_headline'
    %h2.hero-subheadline=t 'about.main_subheadline'

.doc-section
  .container
    .four.columns.alpha
      = render 'about_sidebar'

    .twelve.columns.omega
      %h2.lite=t 'team.headline'
      %p=t 'team.subheadline'

      .clearfix
        .six.columns.alpha
          .doc-section-mini
            .thumbnail
              = image_tag('harry.jpg')
            .team-desc
              %h3=t 'team.harry_headline'
              %p
                %strong=t 'team.harry_text'
              %p=t 'team.harry_desc'

        .six.columns.omega
          .doc-section-mini
            .thumbnail
              = image_tag('vince.jpg')
            .team-desc
              %h3=t 'team.vince_headline'
              %p
                %strong=t 'team.vince_text'
              %p=t 'team.vince_desc'

      .six.columns.alpha
        .doc-section-mini
          .thumbnail
            = image_tag('harvey.jpg')
          .team-desc
            %h3=t 'team.harvey_headline'
            %p
              %strong=t 'team.harvey_text'
            %p=t 'team.harvey_desc'
