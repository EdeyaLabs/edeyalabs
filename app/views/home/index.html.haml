.hero
  .container
    %h1.hero-headline=t 'home.main_headline'
    %h2.hero-subheadline=t 'home.sub_headline'

.doc-section.home-features
  .container
    .one-third.column.alpha
      .home-feature-item
        .icon-home.icon-bulb
        %h3=t 'home.first_col_headline'
        %p=t 'home.first_col_text'

    .one-third.column
      .home-feature-item
        .icon-home.icon-smiley
        %h3=t 'home.second_col_headline'
        %p=t 'home.second_col_text'

    .one-third.column
      .home-feature-item
        .icon-home.icon-cloud-up
        %h3=t 'home.third_col_headline'
        %p=t 'home.third_col_text'


.doc-section
  .container
    .ten.columns.alpha
      %h2.lite=t 'home.wwd'

      = link_to t('home.discuss'), nil, :class => "btn primary"

    .five.columns.offset-by-one.omega
      %h3.lite=t 'home.call_headline'
      %p=t 'home.call_text'
      %h3.lite=t 'home.email_headline'
      %p=t 'home.email_text'
